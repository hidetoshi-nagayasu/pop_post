<div class="card col-sm-5 mx-auto my-auto">
  <div class="card-body">
    <h1>Log in</h1>

    <%= form_with(url: "/login", method: :post, model: @user) do |f| %>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
