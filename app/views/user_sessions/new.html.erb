<div class="background-all-screen">
  <div class="login-wrapper mx-auto my-auto">
    <div>
      <h1>Log in</h1>

      <%= form_with(url: "/login", method: :post, model: @user) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="pt-3">
          <%= f.submit "Log in", class: "submit btn d-block col-12" %>
        </div>
      <% end %>
    </div>

    <div class="link text-center">
      <p>New to Pop Post? <%= link_to "Get Started", new_user_path %></p>
    </div>
  </div>
</div>
